generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Developer {
  id            String       @id @default(uuid())
  name          String
  role          String
  avatarUrl     String
  capacity      Float        @default(1.0)
  dailyRate     Float        @default(0)
  isPlaceholder Boolean      @default(false)
  skills        Skill[]
  allocations   Allocation[]
  leaves        Leave[]
  tags          Tag[]        @relation("DeveloperTags")
  outcomes      Outcome[]
}

model Skill {
  id          String    @id @default(uuid())
  developerId String
  name        String
  level       Int
  category    String
  developer   Developer @relation(fields: [developerId], references: [id], onDelete: Cascade)
}

model Tag {
  id         String      @id @default(uuid())
  name       String      @unique
  color      String      @default("bg-slate-500")
  developers Developer[] @relation("DeveloperTags")
  projects   Project[]   @relation("ProjectTags")
}

model Project {
  id          String          @id @default(uuid())
  name        String
  client      String
  color       String
  status      String          @default("Active")
  budget      Float           @default(0)
  startDate   DateTime?
  endDate     DateTime?
  allocations Allocation[]
  requirements RequiredSkill[]
  phases      Phase[]
  tags        Tag[]           @relation("ProjectTags")
}

model Outcome {
  id          String     @id @default(uuid())
  name        String
  description String?
  isDone      Boolean    @default(false)
  order       Int        @default(0)
  phaseId     String?
  assigneeId  String?
  phase       Phase?     @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  assignee    Developer? @relation(fields: [assigneeId], references: [id], onDelete: SetNull)
}

model Phase {
  id           String          @id @default(uuid())
  projectId    String
  name         String
  startDate    DateTime
  endDate      DateTime
  color        String          @default("bg-base-300")
  project      Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  requirements RequiredSkill[]
  outcomes     Outcome[]
}

model RequiredSkill {
  id        String  @id @default(uuid())
  projectId String
  phaseId   String?
  name      String
  level     Int     @default(3)
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  phase     Phase?  @relation(fields: [phaseId], references: [id], onDelete: SetNull)
}

model Allocation {
  id          String    @id @default(uuid())
  developerId String
  projectId   String
  startDate   DateTime
  endDate     DateTime
  load        Float
  status      String    @default("Confirmed")
  developer   Developer @relation(fields: [developerId], references: [id], onDelete: Cascade)
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Leave {
  id          String    @id @default(uuid())
  developerId String
  startDate   DateTime
  endDate     DateTime
  type        String
  hours       Float?
  developer   Developer @relation(fields: [developerId], references: [id], onDelete: Cascade)
}
